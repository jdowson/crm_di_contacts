!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => :en,  :lang => :en }

  %style
    :sass
      .ibuttons button
        :margin 0 7px 0 0
        :background-color #e5e5e5
        :border 1px solid #dedede
        :border-top 1px solid #ccc
        :border-left 1px solid #ccc
        :font-family "Lucida Grande", Tahoma, Arial, Verdana, sans-serif
        :font-size 100%
        :line-height 130%
        :text-decoration none
        :font-weight bold
        :color #565656
        :cursor pointer
        :padding 5px 10px 6px 7px /* Links */
      .ibuttons button
        :width auto
        :overflow visible
        :padding 4px 10px 3px 7px /* IE6 */
      .ibuttons button[type]
        :padding 5px 10px 5px 7px /* Firefox */
        :line-height 17px /* Safari */
      *:first-child+html button[type]
        :padding 4px 10px 3px 7px /* IE7 */
      .ibuttons button img
        :margin 0 3px -3px 0 !important
        :padding 0
        :border none
        :width 16px
        :height 16px
      button:hover
        :background-color #dff4ff
        :border 1px solid #c2e1ef
        :color #336699
      button.positive
        :color #529214
      button.positive:hover
        :background-color #E6EFC2
        :border 1px solid #C6D880
        :color #529214
      button.negative
        :color #d12f19
      button.negative:hover
        :background #fbe3e4
        :border 1px solid #fbc2c4
        :color #d12f19

  .MB_alert
    %p
    .mboxcaption{ :style => "border: min-height:48px; " }
      = image_tag("di_core/icon_#{@icon}.png", :alt => "#{@icon}", :style => "float:left; padding-right:0.75em; padding-left:0.25em;")
      %span{ :style => "vertical-align:middle;" }
        %b= "#{@caption}"
    .mboxbuttons{ :style => "clear:both" }
      %br
      .ibuttons
        - @buttons.each do |b|
          - m = b[:action] == :script ? b[:method] : "new Ajax.Request('#{b[:action]}', {asynchronous:false, evalScripts:true, method:'#{b[:method].to_s}'}); Modalbox.hide();"
          - s = b[:type] == :n ? "negative" : (b[:type] == :p ? "positive" : "")
          %button{ :type=>"", :onclick => "#{m}", :style => "#{s}"}
            = image_tag("di_core/icon_#{b[:icon]}.png", :alt => "", :height => "16px", :width => "16px") unless b[:icon] == "none"
            = "#{b[:caption]}"
        %br