.remote
  - remote_form_for([:admin, @lookup_item], :html => one_submit_only(:lookup_item).merge({:autocomplete => 'off'})) do |f|
    = link_to_close edit_admin_lookup_item_path(@lookup_item)
    = f.error_messages
    = render :partial => "admin/lookup_items/lookup_item_form", :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit t(:save, :scope => [:di, :lookups, :items])
      #{t :or}
      = link_to_cancel edit_admin_lookup_item_path(@lookup_item)
 
