- edit ||= false
.section
  = f.hidden_field :parent_id
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label.top.req #{t :name, :scope => [:di, :lookups]}:
        = f.text_field :name, :style => "width:240px"
      %td= spacer
      %td(valign="top")
        .label.top.req #{t :description, :scope => [:di, :lookups]}:
        = f.text_field :description, :style => "width:240px"
- unless @lookup.created_at.nil?
  .subtitle #{t :audit_information, :scope => [:di]}
  .section
    %table(width=500 cellpadding=0 cellspacing=0)
      %tr
        %td(valign="top")
          .label #{t :created_at, :scope => [:di]}:
          %b #{l(@lookup.created_at, :format => :long)} 
        %td= spacer
        %td(valign="top")
          .label #{t :updated_at, :scope => [:di]}:
          %b #{l(@lookup.updated_at, :format => :long)} 