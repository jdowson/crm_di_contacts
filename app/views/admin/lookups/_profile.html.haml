- edit ||= false
.section
  = f.hidden_field :parent_id
  %table(width=500 cellpadding=0 cellspacing=0)
    %tr
      %td(valign="top")
        .label.top.req #{t :name, :scope => [:di, :lookups]}:
        = f.text_field :name, :style => "width:240px"
      %td= spacer
      %td(valign="top")
        .label.top.req #{t :description, :scope => [:di, :lookups]}:
        = f.text_field :description, :style => "width:240px"
= render :partial => "admin/dicommon/audit_information", :object => @lookup, :locals => { :edit => true } unless @lookup.created_at.nil?